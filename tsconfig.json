{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "ESNext",
    "noImplicitAny": true,
    "lib": ["es2018", "dom", "dom.iterable"],
    "outDir": "dist",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
